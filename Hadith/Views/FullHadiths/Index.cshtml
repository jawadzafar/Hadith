@model Hadith.Models.NarratorsHadithViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Search</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
            @Html.DropDownList("NarratorID", (IEnumerable<SelectListItem>)ViewBag.NarratorName, htmlAttributes: new { @class="form-control", @multiple = "multiple" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
        }


<h1>Found @Model.Hadiths.Count</h1>
        <table class="table">

            @foreach (var item in Model.Hadiths)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HadithWithArab)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HaddithWithoutArab)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NarratorsWithArab)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NarratorsWithoutArab)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NarratorID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InHID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.upsize_ts)
                    </td>
                </tr>
            }

        </table>
